<div id="setting-basic" class="tab-pane fade in active">
  <% @basic_options.each do |genre, elements| %>
    <h4><%= @settings_msg['genre-title'][genre] %></h4>
    <table class="table table-condensed">
      <% elements.each do |element| %>
        <tr>
          <td class="table-left">
            <label for="<%= genre %>-<%= element['name'] %>">
              <%= element['message'][@locale] %>
            </label>
          </td>
          <td class="table-right">
            <% if element['type'] == 'text' %>
              <input class="vimrc-contents genre-<%= genre %>" type="<%= element['type'] %>" name="<%= element['name'] %>" <%= element['disabled'] %> size="6">
            <% elsif element['type'] == 'checkbox' %>
              <input id="<%= genre %>-<%= element['name'] %>" class="vimrc-contents genre-<%= genre %>" type="<%= element['type'] %>" name="<%= element['name'] %>" <%= element['checked'] %> <%= element['disabled'] %> >
            <% elsif element['type'] == 'selectbox' %>
              <select type="select" class="vimrc-contents genre-<%= genre %>" name="<%= element['name'] %>">
                <% element['values'].each do |val| %>
                  <option value="<%= val %>"><%= val %></option>
                <% end %>
              </select>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
